extends layout

block content
  h1= title
  -
    let results = [
      {
        "muffin_flavour": "Blueberry",
        "muffin_quantity": "1lb",
        "muffin_cost": 30
      },
      {
        "muffin_flavour": "Chocolate Chip",
        "muffin_quantity": "2lb",
        "muffin_cost": 40
      },
      {
        "muffin_flavour": "Apple Crumble",
        "muffin_quantity": "3lb",
        "muffin_cost": 70
      },                   
    ]
  div(class= "container-fluid")
    div(class = "row")
      each item in results
        div(class= "col-sm-2") Flavor: #{item.muffin_flavour}
        div(class= "col-sm-2") Quantity: #{item.muffin_quantity}
        div(class= "col-sm-2") Cost: #{item.muffin_cost}
        br
        br
